<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent" android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:onClick="searchCars" tools:context=".SelectMenu"
    android:background="#000000">


    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="40sp"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="Welcome \n to AutoFinder!"
        android:id="@+id/welcomeMessage"
        android:editable="false"
        android:layout_centerHorizontal="true"
        android:layout_alignParentTop="true"
        android:paddingTop="65dp"
        android:gravity="center"
        android:textColor="#b6b6b6" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="Touch anywhere to begin searching"
        android:id="@+id/instructionMessage"
        android:textSize="16sp"
        android:layout_centerHorizontal="true"
        android:gravity="center"
        android:layout_below="@+id/welcomeMessage"
        android:paddingTop="15dp"
        android:textColor="#b6b6b6" />


    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/carLogo"
        android:src="@drawable/carlogo"
        android:layout_centerVertical="true"
        android:layout_alignParentBottom="true"
        android:paddingBottom="30dp"
        />



</RelativeLayout>
